        <RatingBar
            android:id="@+id/reviewStarEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/interactive"
            android:drawableStart="@drawable/ic_star_rate"
            android:drawablePadding="12dp"
            android:drawableTint="@color/golden"
            android:gravity="center"
            android:hint="@string/hint_star"
            android:progressTint="@color/back_button"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:textColorHint="@color/hint_color"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reviewStarTextView" />

        <LinearLayout
            android:id="@+id/typeDrinkButtonLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp" android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@+id/reviewStarEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/iconCategory1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_local_bar" android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/txtCategoriesSummary"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/main_text"
                android:text="Selecionar Tipo, Copo e Temperatura..."
                android:textSize="18sp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_drop_down" android:layout_marginEnd="8dp"/>
        </LinearLayout>

