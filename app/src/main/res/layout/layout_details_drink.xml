<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/card_constraint"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/detailsPhoto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/baseline_local_drink_24"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_edit"
        android:backgroundTint="@color/back_button"
        android:tint="@color/card_item_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/detailsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="46sp"
        android:textStyle="bold"
        android:textColor="@color/main_text"
        tools:text="Nome do Drink"
        app:layout_constraintTop_toBottomOf="@+id/detailsPhoto"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/detailsIngredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/main_text"
        tools:text="Ingredientes aqui..."
        app:layout_constraintTop_toBottomOf="@+id/detailsName"/>

    <TextView
        android:id="@+id/detailRecipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/main_text"
        tools:text="Descrição da receita aqui..."
        app:layout_constraintTop_toBottomOf="@+id/detailsIngredients"/>

    <TextView
        android:id="@+id/detailsAlcoholContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailsPhoto"
        tools:text="Teor Alcoolico..." />


    <RatingBar
        android:id="@+id/detailsReviewStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:layout_marginTop="8dp"
        android:progressTint="@color/back_button"
        tools:text="Avalicao do drink..."
        app:layout_constraintTop_toBottomOf="@+id/detailRecipe"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/detailsAlcoholBase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/main_text"
        tools:text="Base Alcoolica do Drink"
        app:layout_constraintTop_toBottomOf="@+id/detailsReviewStar"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/detailsDrinkCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/main_text"
        tools:text="Categoria do Drink"
        app:layout_constraintTop_toBottomOf="@+id/detailsReviewStar"
        app:layout_constraintStart_toEndOf="@+id/detailsAlcoholBase"/>

    <TextView
        android:id="@+id/detailsDrinkTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/main_text"
        tools:text="Temperatura do Drink"
        app:layout_constraintTop_toBottomOf="@+id/detailsReviewStar"
        app:layout_constraintStart_toEndOf="@+id/detailsDrinkCategory"/>


</androidx.constraintlayout.widget.ConstraintLayout>